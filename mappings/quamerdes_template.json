{
    "template": "quamerdes_*",
    "settings": {
        "index": {
            "analyzer": "dutch",
            "number_of_shards": 1,
            "number_of_replicas": 0,
            "query": {
                "default_field": "text"
            },
            "analysis": {
                "analyzer": {
                    "text_nl": {
                        "type": "custom",
                        "filter": [
                            "asciifolding",
                            "lowercase",
                            "custom_word_delimiter",
                            "hunspell_nl"
                        ],
                        "tokenizer": "standard"
                    }
                },
                "filter": {
                    "custom_word_delimiter": {
                        "type": "word_delimiter",
                        "split_on_numerics": false,
                        "generate_number_parts": true,
                        "stem_english_possesive": false,
                        "catenate_words": false,
                        "catenate_numbers": true,
                        "split_on_case_change": false,
                        "generate_word_parts": true
                    },
                    "hunspell_nl": {
                        "type": "hunspell",
                        "dedup": true,
                        "locale": "nl_NL"
                    }
                }
            }
        }
    },
    "mappings": {
        "_default_": {
            "_all": {
                "enabled": false
            },
            "_index": {"enabled": true},
            "text": {
                "type": "string",
                "analyzer": "text_nl",
                "index_options": "offsets"
            },
            "date": {
                "type": "date",
                "format": "dateOptionalTime"
            },
            "title": {
                "type": "string",
                "analyzer": "text_nl",
                "index_options": "offsets",
                "fields": {
                    "raw": { "type": "string", "index": "not_analyzed" }
                }
            },
            "source": {
                "type": "string",
                "index": "not_analyzed"
            },
            "_meta": {
                "properties": {
                    "record_identifier": {
                        "type": "string",
                        "index": "not_analyzed"
                    }
                }
            }
        },
        "article": {
            "_meta": {
                "properties": {
                    "article_type": {"type": "string", "index": "not_analyzed"},
                    "issue": {
                        "properties": {
                            "identifier": {"type": "string", "index": "not_analyzed"},
                            "issue_number": {"type": "number"},
                            "publisher": {"type": "string", "index": "not_analyzed"},
                            "record_identifier": {"type": "string", "index": "not_analyzed"},
                            "source": {"type": "string", "index": "not_analyzed"},
                            "volume": {"type": "integer"}
                        }
                    },
                    "html_text": {
                        "type": "string",
                        "index": "no"
                    }
                }
            }
        },
        "expression": {
            "_meta": {
                "properties": {
                    "broadcastdates": {
                        "properties": {
                            "end": {"type": "date", "format": "dateOptionalTime"},
                            "start": {"type": "date", "format": "dateOptionalTime"}
                        }
                    },
                    "broadcasters": {"type": "string", "index": "not_analyzed"},
                    "categories": {
                        "properties": {
                            "key": {"type": "string", "index": "not_analyzed"},
                            "value": {"type": "string", "index": "not_analyzed"}
                        }
                    },
                    "descriptions": {"type": "string"},
                    "expressieID": {"type": "string", "index": "not_analyzed"},
                    "immixDate": {"type": "date", "format": "dateOptionalTime"},
                    "levelTitles": {
                        "properties": {
                            "level": {"type": "string", "index": "not_analyzed"},
                            "title": {
                                "type": "string",
                                "index": "analyzed",
                                "fields": {"raw": {"type": "string", "index": "not_analyzed"}}
                            }
                        }
                    },
                    "mainTitle": {
                        "type": "string", "index": "analyzed", "fields": {
                            "raw": {"type": "string", "index": "not_analyzed"}
                        }
                    },
                    "realisatieID": {"type": "string", "index": "not_analyzed"},
                    "reeksID": {"type": "string", "index": "not_analyzed"},
                    "resource_identifier": {"type": "string", "index": "not_analyzed"},
                    "roles": {
                        "properties": {
                            "key": {"type": "string", "index": "not_analyzed"},
                            "value": {"type": "string", "index": "not_analyzed"},
                            "playerFunction": {"type": "string", "index": "not_analyzed"},
                            "playerName": {"type": "string", "index": "not_analyzed"}
                        }
                    },
                    "subtitles": {"type": "string"},
                    "summaries": {"type": "string"},
                    "titles": {"type": "string"}
                }
            }
        }
    }
}
